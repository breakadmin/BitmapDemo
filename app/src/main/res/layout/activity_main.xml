<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="pers.lbreak.bitmapdemo.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bitmapDrawable"
        android:background="@drawable/drawable_bitmap" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ninepatch 开启防抖动效果"
        android:background="@drawable/drawable_ninepatch" />
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/drawable_shape" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
        android:indeterminateOnly="false"
        android:maxHeight="10dp"
        android:minHeight="5dp"
        android:progressDrawable="@drawable/drawable_layer"
        android:thumb="@drawable/icon_book" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StateListDrawable"
        android:background="@drawable/drawable_selector"/>
    <ImageView
        android:id="@+id/img_show"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/drawable_level"
        />

    <ImageView
        android:id="@+id/img_show2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/drawable_transition"
        />

</LinearLayout>
